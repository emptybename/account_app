      	<%= link_to "FINANCE", new_transaction_path, class:"log" %>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
    	<%= form_for @transaction do |f| %>
	<ul class="nav navbar-nav transaction_form">
	<li><%= f.select(:transaction_type, options_for_select(["insert",
			"delete","transfer"]),{prompt: "transaction_type"}) %></li>
	<li><%= f.select(:from_account_id, options_for_select(@accounts),{prompt: "from_account"})%></li>
	<li id="to_account_id"><%= f.select(:to_account_id, options_for_select(@accounts),{prompt:"to_account"})%></li>
	<li><%= f.number_field :amount, step: 'any', placeholder: "amount" %></li>
	<li><%= f.text_field :description, placeholder: "Description" %></li>
	<li><%= f.select(:tag_type, options_for_select([["abc","abc"],["cde","cde"],["fgh","fgh"]]),
		{prompt:"tag_type"})%></li>
	<li><%= f.date_field :date_of_transaction %></li>
	<li><%= f.submit "create_transaction", class: "submit"%></li>
	</ul>
